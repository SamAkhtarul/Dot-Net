@model TaskManagement.Models.AssignedTask

@{
    ViewData["Title"] = "Delete Assigned Task";
}

<h1>Delete Assigned Task</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Assigned Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Task
        </dt>
        <dd class="col-sm-10">
            @Model.Task.Title
        </dd>
        <dt class="col-sm-2">
            Assigned To
        </dt>
        <dd class="col-sm-10">
            @Model.User.Name
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
